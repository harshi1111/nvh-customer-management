{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "backend/src/index.ts"
    },
    {
      "source": "/api/customers/(.*)",
      "destination": "backend/src/index.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "backend/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
